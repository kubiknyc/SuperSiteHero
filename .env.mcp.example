# MCP Server Environment Variables
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control!

# GitHub Integration
# Get from: https://github.com/settings/tokens
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_your_token_here

# PostgreSQL Direct Access (Supabase)
# Get from: Supabase Project Settings > Database > Connection String (Connection Pooling)
POSTGRES_CONNECTION_STRING=postgresql://postgres.[project-ref]:[password]@aws-0-us-west-1.pooler.supabase.com:6543/postgres

# Brave Search API
# Get from: https://brave.com/search/api/
# Free tier: 2,000 queries/month
BRAVE_API_KEY=your_brave_api_key_here

# Google Maps API
# Get from: https://console.cloud.google.com/
# Enable: Maps JavaScript API, Geocoding API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Slack Integration
# Get from: https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_TEAM_ID=T0123456789

# Sentry Error Tracking (MCP Server)
# Get from: https://sentry.io/ > Settings > Auth Tokens
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Sentry Error Tracking (Application)
# Get from: https://sentry.io/ > Project Settings > Client Keys (DSN)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_DEBUG=false
VITE_APP_VERSION=1.0.0

# Supabase (already configured in .mcp.json, but useful for reference)
VITE_SUPABASE_URL=https://nxlznnrocrffnbzjaaae.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here
