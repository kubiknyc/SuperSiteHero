# Supabase Configuration
VITE_SUPABASE_URL=your-project-url.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# Environment
VITE_APP_ENV=development

# Email Configuration
# Provider: 'resend' for production, 'console' for development (logs to console)
VITE_EMAIL_PROVIDER=console

# App URL (used for email links)
VITE_APP_URL=http://localhost:5173

# Sentry Error Monitoring
# Get your DSN from: https://sentry.io/ -> Project Settings -> Client Keys (DSN)
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_DEBUG=false
VITE_APP_VERSION=1.0.0

# Note: Resend API key should be stored as Supabase secret, NOT in .env
# Run: supabase secrets set RESEND_API_KEY=re_xxxxx
# Run: supabase secrets set EMAIL_FROM=noreply@yourdomain.com

# Google Drive MCP Server
# Get credentials from: https://console.cloud.google.com/apis/credentials
# 1. Create OAuth 2.0 Client ID
# 2. Add http://localhost:3000/oauth/callback as authorized redirect URI
GDRIVE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GDRIVE_CLIENT_SECRET=your-client-secret
