<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CAPACITOR_DEBUG</key>
	<string>$(CAPACITOR_DEBUG)</string>
	<key>CFBundleDevelopmentRegion</key>
	<string>en</string>
	<key>CFBundleDisplayName</key>
	<string>JobSight</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(MARKETING_VERSION)</string>
	<key>CFBundleVersion</key>
	<string>$(CURRENT_PROJECT_VERSION)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>armv7</string>
	</array>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UIViewControllerBasedStatusBarAppearance</key>
	<true/>

	<!-- Camera Permission -->
	<key>NSCameraUsageDescription</key>
	<string>JobSight needs camera access to capture photos and videos of construction progress, safety observations, punch list items, and document scans.</string>

	<!-- Photo Library Permission -->
	<key>NSPhotoLibraryUsageDescription</key>
	<string>JobSight needs photo library access to upload existing photos for daily reports, punch lists, and project documentation.</string>

	<!-- Photo Library Add Permission (iOS 14+) -->
	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>JobSight needs permission to save captured photos to your photo library for backup and sharing.</string>

	<!-- Location Permission (When In Use) -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>JobSight uses your location to geotag photos, verify site check-ins, and provide weather data for daily reports.</string>

	<!-- Location Permission (Always - for background tracking if needed) -->
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>JobSight uses your location to geotag photos and track site visits. Background location is used only when actively logging time on site.</string>

	<!-- Microphone Permission -->
	<key>NSMicrophoneUsageDescription</key>
	<string>JobSight needs microphone access to record voice memos, dictate notes, and capture audio for video documentation.</string>

	<!-- Face ID Permission (for biometric auth) -->
	<key>NSFaceIDUsageDescription</key>
	<string>JobSight uses Face ID for quick and secure login to protect your construction project data.</string>

	<!-- Local Network Permission (for offline sync) -->
	<key>NSLocalNetworkUsageDescription</key>
	<string>JobSight uses local network to sync data with nearby devices when offline.</string>

	<!-- Background Modes -->
	<key>UIBackgroundModes</key>
	<array>
		<string>fetch</string>
		<string>remote-notification</string>
	</array>

	<!-- App Transport Security - Allow HTTPS only -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<false/>
	</dict>

	<!-- URL Schemes for deep linking -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>jobsight</string>
				<string>com.jobsightapp.app</string>
			</array>
		</dict>
	</array>

	<!-- Associated Domains for universal links -->
	<key>com.apple.developer.associated-domains</key>
	<array>
		<string>applinks:app.jobsight.com</string>
		<string>applinks:jobsight.netlify.app</string>
	</array>

	<!-- Status Bar Style -->
	<key>UIStatusBarStyle</key>
	<string>UIStatusBarStyleLightContent</string>

	<!-- Disable scene-based app lifecycle (use UIApplicationDelegate) -->
	<key>UIApplicationSceneManifest</key>
	<dict>
		<key>UIApplicationSupportsMultipleScenes</key>
		<false/>
		<key>UISceneConfigurations</key>
		<dict/>
	</dict>
</dict>
</plist>
